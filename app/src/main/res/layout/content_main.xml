<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tests.jackman.tablet.MainActivity">



    <ListView
        android:id="@+id/itemListView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/toolbar">

    </ListView>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/itemListView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/infoTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/firstBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WHITE \nWINE"
                android:textSize="8sp"
                android:padding="8sp"
                />


            <Button
                android:id="@+id/secondBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/firstBtn"
                android:layout_weight="1"
                android:text="RED \nWINE"
                android:textSize="8sp"
                android:padding="8sp"/>

            <Button
                android:id="@+id/forthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bottled \n Beer"
                android:textSize="8sp"
                android:padding="8sp"/>


            <Button
                android:id="@+id/thirdBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/secondBtn"
                android:layout_weight="1"
                android:text="champagne \n "
                android:textSize="8sp"
                android:padding="8sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/fifthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Orange \n juice"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/sixthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="apple \n juice"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/seventhBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cranberry \n juice"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/eighthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fruit \n juice"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/ninthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="menu 1"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/tenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="menu 2"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/eleventhBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="menu 3"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/twelthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="menu 4"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/therteenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="laptop"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/fourteenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="projector"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/fifthteenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="microphone"
                android:textSize="8sp"/>

            <Button
                android:id="@+id/sixteenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="flipchart"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/seventeenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="8sp"/>

            <Button
                android:id="@+id/eighteenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="8sp"/>

            <Button
                android:id="@+id/ninteenthBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SIGNATURE"
                android:textSize="8sp"
                android:onClick="sendMessage"/>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Total"
                    android:textSize="8sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Â£0.00"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textAlignment="gravity"
                    android:id="@+id/totalPrice"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
